# ===========================================
# LLMShield Environment Configuration
# ===========================================

# -------------------------------------------
# Pinecone Configuration (Cloud Vector DB)
# -------------------------------------------
# Get these from https://app.pinecone.io/

# Your Pinecone API key (required for Pinecone)
PINECONE_API_KEY=your-api-key-here

# Pinecone environment (optional, may be auto-detected)
# Examples: us-east-1-aws, us-west1-gcp, gcp-starter
PINECONE_ENVIRONMENT=us-east-1-aws

# Your Pinecone index name (required for Pinecone)
# Create this in Pinecone console with dimension=384, metric=cosine
PINECONE_INDEX_NAME=llmshield-demo

# Optional: Pinecone host URL (if provided by Pinecone)
# PINECONE_HOST=llmshield-demo-xxxxx.svc.us-east-1.aws.pinecone.io

# -------------------------------------------
# ChromaDB Local Configuration
# -------------------------------------------
# For connecting to a local ChromaDB server or persistent storage

# ChromaDB server host (default: localhost)
CHROMA_HOST=localhost

# ChromaDB server port (default: 8000)
CHROMA_PORT=8000

# Optional: Path to persistent storage (if not using HTTP server)
# CHROMA_PERSIST_DIRECTORY=./chroma_data

# Collection name to scan (required for ChromaDB)
CHROMA_COLLECTION_NAME=my_collection

# -------------------------------------------
# ChromaDB Cloud Configuration
# -------------------------------------------
# For connecting to ChromaDB Cloud (https://www.trychroma.com/)

# ChromaDB Cloud API key (required for cloud)
# CHROMA_CLOUD_API_KEY=your-chroma-cloud-api-key

# Tenant name (default: default_tenant)
# CHROMA_CLOUD_TENANT=default_tenant

# Database name (default: default_database)
# CHROMA_CLOUD_DATABASE=default_database

# -------------------------------------------
# Qdrant Local Configuration
# -------------------------------------------
# For connecting to a local/self-hosted Qdrant server

# Qdrant server host (default: localhost)
QDRANT_HOST=localhost

# Qdrant server port (default: 6333)
QDRANT_PORT=6333

# Optional: API key for secured Qdrant
# QDRANT_API_KEY=your-qdrant-api-key

# Collection name to scan (required for Qdrant)
QDRANT_COLLECTION_NAME=my_collection

# -------------------------------------------
# Qdrant Cloud Configuration
# -------------------------------------------
# For connecting to Qdrant Cloud (https://cloud.qdrant.io/)

# Qdrant Cloud cluster URL (required for cloud)
# QDRANT_CLOUD_URL=https://xxx-xxx.us-east-1-0.aws.cloud.qdrant.io

# Qdrant Cloud API key (required for cloud)
# QDRANT_CLOUD_API_KEY=your-qdrant-cloud-api-key

# -------------------------------------------
# Weaviate Local Configuration
# -------------------------------------------
# For connecting to a local/self-hosted Weaviate server

# Weaviate server host (default: localhost)
WEAVIATE_HOST=localhost

# Weaviate server port (default: 8080)
WEAVIATE_PORT=8080

# Optional: API key for secured Weaviate
# WEAVIATE_API_KEY=your-weaviate-api-key

# Class name to scan (required for Weaviate)
WEAVIATE_CLASS_NAME=MyClass

# -------------------------------------------
# Weaviate Cloud Configuration
# -------------------------------------------
# For connecting to Weaviate Cloud Services (https://weaviate.io/cloud)

# Weaviate Cloud cluster URL (required for cloud)
# WEAVIATE_CLOUD_URL=https://xxx.weaviate.network

# Weaviate Cloud API key (optional but recommended)
# WEAVIATE_CLOUD_API_KEY=your-wcs-api-key

# -------------------------------------------
# OpenAI Configuration (for embeddings)
# -------------------------------------------
# OPENAI_API_KEY=sk-...

# -------------------------------------------
# Database Configuration
# -------------------------------------------
# MONGODB_URL=mongodb://localhost:27017
# DATABASE_NAME=llmshield

# -------------------------------------------
# Security
# -------------------------------------------
# SECRET_KEY=your-secret-key-for-jwt
# ALGORITHM=HS256

